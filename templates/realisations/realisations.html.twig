{% extends 'base.html.twig' %}

{% block title "Réalisations" %} 

{% block body %}
    <div class="mini-header">
        <header>Réalisations</header>
    </div>
    <section class="mini-container">
            <div id="real">
                {% for r in realisations %}
                    <div class="real-content">
                        <a href="{{ path('realisation.show', {slug: r.slug, id: r.id}) }}">
                            <div class="real-card">
                                <div class="real-img">
                                    <img src="{{ vich_uploader_asset(r, 'imageFile') |imagine_filter('miniature') }}" alt="" width="150" height="150">
                                </div>
                            
                                <div class="real-desc">
                                    <h1>{{ r.nom }}</h1>
                                    <p>{{ r.description|u.truncate(120, '...') }}</p>
                                    <span id="date-real">Ajouté le {{ r.formateddatePublication }} </span>
                                </div>
                            </div>
                            
                        </a>
                    </div>
                {% endfor %}
            
            </div>
            <div id="pagination">
                {# on lui passe en param l'objet qui es paginable #}
                {{ knp_pagination_render(realisations, 'base/_pagination.html.twig') }}
            </div>
    </section>
{% endblock %}
