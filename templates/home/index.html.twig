{% extends 'base.html.twig' %}

{% block title %}Page d'acceuil{% endblock %}

{% block body %}

<main>
    <section class="langind">
        <div class="landing-content">
            <div class="landing-card">
                <div class="card-body">
                    <h1 class="card-title">Art-Peintre</h1>
                    <p>Lorem ipsum dolor sit, amet consectetur adipisicing.</p>
                </div>
                <div class="card-link">
                    <a href="{{ path('portfolio') }}">Decouvrir Mon Portfolio <span id="space"></span> <span class="fa-solid fa-arrow-right"></span></a>
                    
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="home-content">
            <header>Dernieres Réalisations <span></span> </header>
            <div id="real">
                {% for p in peintures %}
                
                    <div class="real-content">
                        <a href="{{ path('realisation.show', {slug: p.slug, id: p.id}) }}">
                            <div class="real-card">
                                <div class="real-img">
                                    <img src="./imgs/house.jpg" alt="" width="150" height="150">
                                </div>
                                <div class="real-desc">
                                    <h1>{{ p.nom }}</h1>
                                    <p>{{ p.description|u.truncate(120, '...') }}</p>
                                    <span id="date-real">Ajouté le {{ p.formateddatePublication }} </span>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            
            </div>
            {# <div class="pagination mt-3">
                on lui passe en param l'objet qui es paginable 
                {{ knp_pagination_render(peintures) }}
            </div> #}
    
            <header>Dernieres Actualités <span></span></header>
            <div id="actu">
                <div class="actu-content">
                    {% for b in blogposts %}
                            <div class="actu-item">
                                <a href="#">
                                    <h1>{{ b.titre }} </h1>
                                    <p>{{ b.contenu|u.truncate(70, '...') }} </p>
                                    <span id="date-actu">publier le {{ b.formatedCreatedAt }} </span>
                                </a>
                            </div>
                    {% endfor %}
                </div>
                   
            </div>
        </div>
    
    </section>
</main>


{% endblock %}
